<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
	<!-- 引入外部资源文件，将数据库配置设为外部链接 resource属性加载的一般为配置文件 -->
	<properties resource="db.properties" />
	<!-- 给引用类起别名 -->
	<typeAliases>
		<!-- 给单个具体的类起别名 (POJO类)-->
		<!-- <typeAlias type="com.atguigu.mybatis.entities.Person" alias="Person"/> -->
		<!-- 批处理别名，扫描整个包下的所有类-->
		<package name="com.atguigu.mybatis.entities"/>
	</typeAliases>
	<environments default="development">
		<environment id="development">
			<!-- 使用jdbc管理事务 -->
			<transactionManager type="JDBC" />
			<!-- 加载数据库链接池 -->
			<dataSource type="POOLED">
				<property name="driver" value="${jdbc.driverClass}" />
				<property name="url" value="${jdbc.jdbcUrl}" />
				<property name="username" value="${jdbc.user}" />
				<property name="password" value="${jdbc.password}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<!-- 注册mapper包下的所有mapper接口,此种方法要求mapper接口名称
		和mapper映射文件名称遵守mabatis规范，且放在同一个目录中 -->
		<package name="com.atguigu.mybatis.mapper"/>
		<!-- <mapper resource="com/atguigu/mybatis/mapper/PersonMapper.xml" />
		注册注解类的映射
		<mapper class="com.atguigu.mybatis.mapper.PersonMapperAnnotation" /> -->
	</mappers>

</configuration>
